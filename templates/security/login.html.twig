{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head">
                <div class="row">
                    <div class="col-lg-8 col-12">
                        <div class="form-main">
                            <div class="title">
                                <h4>ExportWise</h4>
                                <h3>Connectez-vous et achetez à travers le monde entier sans difficulté</h3>
                            </div>
                            <form class="form" method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="row">

                                    <div class="col-lg-6 col-12">
                                        <div class="form-group">
                                            <label for="inputEmail">Votre Email<span>*</span></label>
                                            <input value="{{ last_username }}" name="email" type="email" id="inputEmail" required autofocus>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-12">
                                        <div class="form-group">
                                            <label for="inputPassword">Votre mot de passe<span>*</span></label>
                                            <input   name="password" type="password" id="inputPassword" required>
                                        </div>
                                    </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                    <div class="col-12">
                                        <div class="form-group button">
                                            <button type="submit" class="btn ">Connectez vous</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>



{% endblock %}
