    <!--/ End Slider Area -->

    <!-- Start Small Banner  -->
    <section class="small-banner section">
        <div class="container-fluid">
            <div class="row">
                <!-- Single Banner  -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="single-banner">
                        <img src="https://via.placeholder.com/600x370" alt="#">
                        <div class="content">
                            <p>Man's Collectons</p>
                            <h3>Summer travel <br> collection</h3>
                            <a href="#">Discover Now</a>
                        </div>
                    </div>
                </div>
                <!-- /End Single Banner  -->
                <!-- Single Banner  -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="single-banner">
                        <img src="https://via.placeholder.com/600x370" alt="#">
                        <div class="content">
                            <p>Bag Collectons</p>
                            <h3>Awesome Bag <br> 2020</h3>
                            <a href="#">Shop Now</a>
                        </div>
                    </div>
                </div>
                <!-- /End Single Banner  -->
                <!-- Single Banner  -->
                <div class="col-lg-4 col-12">
                    <div class="single-banner tab-height">
                        <img src="https://via.placeholder.com/600x370" alt="#">
                        <div class="content">
                            <p>Flash Sale</p>
                            <h3>Mid Season <br> Up to <span>40%</span> Off</h3>
                            <a href="#">Discover Now</a>
                        </div>
                    </div>
                </div>
                <!-- /End Single Banner  -->
            </div>
        </div>
    </section>
    <!-- End Small Banner -->

    <!-- Start Product Area -->
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                </div>
                <div class="col">
                    <button class="btn btn-primary">Rechercher</button>
                </div>

            </div>

            {{ form_end(form) }}

        </div>
    </div>
    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2>Pays</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-info">
                        <div class="nav-main">
                            <!-- Tab Nav -->
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                {% for country in countries %}
                                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#man"
                                                            role="tab">{{ country.country }}</a></li>
                                {% endfor %}

                            </ul>
                            <!--/ End Tab Nav -->
                        </div>

                        <div class="tab-content" id="myTabContent">
                            <!-- Start Single Tab -->
                            <div class="tab-pane fade show active" id="man" role="tabpanel">
                                <div class="tab-single">
                                    <div class="row">
                                        {% for product in products %}
                                            {% if product.filename %}

                                                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                    <div class="single-product">
                                                        <div class="product-img">
                                                            <a href="{{ path('product_controller2_show_main', {'id': product.id}) }}">
                                                                <img
                                                                     src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('thumb')  }}"  style="height:100%; width: 70%" alt="{{ product.description }}">

                                                            </a>
                                                            <div class="button-head">
                                                                <div class="product-action-2">
                                                                    <a title="Add to cart" href="#">Add to cart</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="product-content">
                                                            <h3>
                                                                <a href="{{ path('product_controller2_show_main', {'id': product.id}) }}">{{ product.Name }}</a>
                                                            </h3>
                                                            <div class="product-price">
                                                                <span>${{ product.price }}</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            {% endif %}
                                        {% endfor %}

                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Tab -->
                            <!-- Start Single Tab -->

                        </div>
                    </div>
                </div>
                <!--/ End Single Tab -->
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    <!-- End Product Area -->


    <br>
    <br>
    <br>

{% endblock %}
